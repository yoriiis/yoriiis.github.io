{
	"name": "yoriiis.github.io",
	"version": "1.0.0",
	"description": "",
	"homepage": "https://github.com/yoriiis/yoriiis.github.io",
	"bugs": "https://github.com/yoriiis/yoriiis.github.io/issues",
	"repository": "https://github.com/yoriiis/yoriiis.github.io.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris DANIEL",
	"scripts": {
		"build": "rm -rf ./web/dist/ && webpack --mode=production",
		"start": "rm -rf ./web/dist/ && webpack --mode=development",
		"test:eslint": "eslint . --ignore-pattern web/dist",
		"test:stylelint": "stylelint './src/**/*.css'"
	},
	"babel": {
		"plugins": [],
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12.14.0"
					}
				}
			]
		]
	},
	"browserslist": [
		"last 5 version"
	],
	"prettier": {
		"printWidth": 100,
		"overrides": [
			{
				"files": "*.md",
				"options": {
					"proseWrap": "preserve",
					"tabWidth": 2,
					"useTabs": false
				}
			},
			{
				"files": "*.html",
				"options": {
					"printWidth": 500
				}
			}
		]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaFeatures": {
				"impliedStrict": true,
				"experimentalObjectRestSpread": true
			},
			"ecmaVersion": 6,
			"sourceType": "module"
		},
		"extends": "standard",
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"ignoredNodes": [
						"TemplateLiteral > *"
					]
				}
			],
			"no-console": 0,
			"no-tabs": 0
		},
		"globals": {
			"document": false,
			"window": false
		}
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"plugins": [
			"stylelint-prettier"
		],
		"rules": {
			"indentation": [
				"tab",
				{
					"ignore": "inside-parens"
				}
			],
			"unit-whitelist": [
				"%",
				"px",
				"fr",
				"ms",
				"deg",
				"s"
			],
			"declaration-colon-newline-after": null,
			"value-list-comma-newline-after": null,
			"prettier/prettier": true
		}
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "7.9.0",
		"@babel/preset-env": "7.9.5",
		"babel-eslint": "10.0.3",
		"babel-loader": "8.0.6",
		"css-loader": "3.4.2",
		"eslint": "6.8.0",
		"eslint-config-standard": "14.1.0",
		"eslint-plugin-import": "2.20.0",
		"eslint-plugin-node": "11.0.0",
		"eslint-plugin-promise": "4.2.1",
		"eslint-plugin-standard": "4.0.1",
		"expose-loader": "0.7.5",
		"file-loader": "5.0.2",
		"mini-css-extract-plugin": "0.4.1",
		"optimize-css-assets-webpack-plugin": "5.0.3",
		"postcss-custom-media": "7.0.8",
		"postcss-import": "12.0.1",
		"postcss-loader": "3.0.0",
		"postcss-nested": "4.2.1",
		"postcss-preset-env": "6.7.0",
		"prettier-eslint": "9.0.1",
		"progress-bar-webpack-plugin": "2.1.0",
		"style-loader": "1.1.3",
		"stylelint": "13.0.0",
		"stylelint-config-standard": "19.0.0",
		"stylelint-prettier": "1.1.2",
		"terser-webpack-plugin": "2.3.2",
		"webpack": "4.41.5",
		"webpack-cli": "3.3.10",
		"webpack-manifest-plugin": "2.2.0"
	},
	"engines": {
		"node": ">=8.11.2"
	}
}
